<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mobile_green"
    android:padding="15dp"
    tools:context=".EditProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="15dp">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_edit_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mobile_bg_white"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="EDIT USER INFORMATION"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/mobile_green"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:id="@+id/v_search_divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#868484"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView30"

                />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_search_divider"
                app:srcCompat="@drawable/ic_bxs_phone_call" />

            <EditText
                android:id="@+id/et_edit_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/mobile_green"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Mobile number"
                android:inputType="phone"
                android:textColor="#02043F"
                android:textColorHint="#9E9E9E"
                app:layout_constraintLeft_toRightOf="@id/phone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_search_divider" />

            <EditText
                android:id="@+id/et_edit_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/mobile_green"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Street Address"
                android:inputType="textPersonName"
                android:textColor="#02043F"
                android:textColorHint="#9E9E9E"
                app:layout_constraintLeft_toRightOf="@+id/signup2_iv_fname"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_edit_phone" />

            <EditText
                android:id="@+id/et_edit_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/mobile_green"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="City"
                android:inputType="textPersonName"
                android:textColor="#02043F"
                android:textColorHint="#9E9E9E"
                app:layout_constraintLeft_toRightOf="@+id/signup2_iv_fname"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_edit_address" />

            <EditText
                android:id="@+id/et_edit_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/mobile_green"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Province"
                android:inputType="textPersonName"
                android:textColor="#02043F"
                android:textColorHint="#9E9E9E"
                app:layout_constraintLeft_toRightOf="@+id/signup2_iv_fname"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_edit_city" />

            <EditText
                android:id="@+id/set_edit_postal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/mobile_green"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Postal"
                android:inputType="textPersonName"
                android:textColor="#02043F"
                android:textColorHint="#9E9E9E"
                app:layout_constraintLeft_toRightOf="@+id/signup2_iv_fname"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_edit_province" />


            <ImageView
                android:id="@+id/signup2_iv_fname"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone"
                app:srcCompat="@drawable/ic_fa6_solid_house_chimney" />

            <Button
                android:id="@+id/btn_add_admin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/mobile_green"
                android:fontFamily="@font/montserrat_bold"
                android:text="SAVE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/set_edit_postal"/>

            <Button
                android:id="@+id/btn_admin_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/montserrat_bold"
                android:text="CANCEL"
                android:textColor="@color/mobile_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/set_edit_postal"
                app:strokeColor="@color/mobile_green"
                app:strokeWidth="2dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>