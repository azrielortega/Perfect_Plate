<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mobile_bg_white"
    tools:context=".ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mobile_green"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_bi_person_circle" />

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="John Doe"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat"
            android:text="0947 123 4567"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_name" />

        <TextView
            android:id="@+id/tv_profile_street"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Street Address"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_number" />

        <TextView
            android:id="@+id/tv_profile_city_province_postal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat"
            android:text="San Pedro, Laguna, 4023"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_street" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile_my_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_profile_details">

        <LinearLayout
            android:id="@+id/ll_to_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ll_to_receive"
            app:layout_constraintTop_toBottomOf="@id/v_search_divider">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@color/mobile_gray"
                app:srcCompat="@drawable/ic_bi_cash_coin"
                app:tint="@color/mobile_gray" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mobile_gray"
                android:fontFamily="@font/montserrat"
                android:text="To Pay"
                android:textAlignment="center"
                android:textColor="@color/mobile_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_to_receive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/ll_to_pay"
            app:layout_constraintRight_toLeftOf="@id/ll_delivered"
            app:layout_constraintTop_toBottomOf="@id/v_search_divider">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@color/mobile_gray"
                app:srcCompat="@drawable/ic_fa_truck"
                app:tint="@color/mobile_gray" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mobile_gray"
                android:fontFamily="@font/montserrat"
                android:text="To Receive"
                android:textAlignment="center"
                android:textColor="@color/mobile_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delivered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/ll_to_receive"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_search_divider">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:srcCompat="@drawable/vectorcheck"
                app:tint="@color/mobile_gray" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mobile_gray"
                android:fontFamily="@font/montserrat"
                android:text="Delivered"
                android:textAlignment="center"
                android:textColor="@color/mobile_gray" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_clarity_list_solid_badged" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="My Orders"
            android:textColor="@color/mobile_green"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/imageView6"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_view_all_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="View all Orders >"
            android:textColor="@color/mobile_gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_search_divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#868484"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView28"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll_cart">

        <ImageView
            android:id="@+id/iv_search_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            app:tint="#868484"
            app:srcCompat="@drawable/ic_search" />

        <TextView
            android:id="@+id/tv_search_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Search"
            android:textAlignment="center"
            android:textColor="#868484"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cart"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_search"
        app:layout_constraintRight_toLeftOf="@id/ll_profile">

        <ImageView
            android:id="@+id/iv_search_cart"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_bx_cart" />

        <TextView
            android:id="@+id/tv_search_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Cart"
            android:textAlignment="center"
            android:textColor="#868484"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_cart"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_search_profile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            app:tint="@color/mobile_green"
            app:srcCompat="@drawable/vectorperson" />

        <TextView
            android:id="@+id/tv_search_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="@color/mobile_green"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/v_dividerbot"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/mobile_gray"
        app:layout_constraintBottom_toTopOf="@id/ll_profile"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>