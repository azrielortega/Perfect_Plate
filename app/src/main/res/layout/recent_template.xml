<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingLeft="0dp"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_recent_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shadow"
        android:clipToPadding="true"
        android:fadingEdge="horizontal|vertical"
        android:focusable="auto"
        android:longClickable="true"
        android:padding="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        android:elevation="8dp"
        >

        <ImageView
            android:id="@+id/iv_recent_pic"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:adjustViewBounds="true"
            android:background="@drawable/shadow"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/book_cover" />

        <TextView
            android:id="@+id/tv_recent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="bottom"
            android:maxLines="2"
            android:text="The New Science Links Teacherâ€™s Resource Materials"
            android:textColor="@color/mobile_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_recent_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="53dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:lines="2"
            android:maxLines="2"
            android:text="Evelyn T. Larisma, Jan Jason Madriaga-Mariano"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="italic"

            />

        <TextView
            android:id="@+id/tv_recent_category"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="90dp"
            android:background="@color/mobile_yellow"
            android:fontFamily="@font/montserrat_bold"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="grade 10"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="345dp"
            android:layout_marginTop="155dp"
            app:srcCompat="@drawable/ic_right_arrow" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Php"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_recent_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="140.00"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>