<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F0EF"
    tools:context=".CreateRecipeActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/create3_tempPic"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:background="#DCD6D7"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/guideline31"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guideline29"
                app:layout_constraintTop_toBottomOf="@+id/createrecipe3_btn_finish" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.07" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/createrecipe3_ib_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_blue"
                    android:backgroundTint="#00FFFFFF"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="301dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|center_vertical"
                    android:text="Create Recipe"
                    android:textAlignment="center"
                    android:textColor="#02043F"
                    android:textSize="21sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="What steps are needed to make your dish?"
                android:textColor="#FF9400"
                app:layout_constraintStart_toStartOf="@+id/guideline29"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <Button
                android:id="@+id/createrecipe3_btn_finish"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/roundercornersbutton"
                android:fontFamily="@font/montserrat"
                android:foregroundTint="#FFFFFF"
                android:shadowColor="#7C7979"
                android:text="Finish"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                app:backgroundTint="#02043F"
                app:layout_constraintEnd_toStartOf="@+id/guideline31"
                app:layout_constraintTop_toBottomOf="@+id/createrecipe3_btn_add" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFC540" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#868484" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/createrecipe3_ll_steps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/guideline31"
                app:layout_constraintStart_toStartOf="@+id/guideline29"
                app:layout_constraintTop_toBottomOf="@+id/textView30">

            </LinearLayout>

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="ADD STEPS"
                android:textColor="#02043F"
                app:layout_constraintStart_toStartOf="@+id/guideline29"
                app:layout_constraintTop_toBottomOf="@+id/textView29" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.93" />

            <Button
                android:id="@+id/createrecipe3_btn_add"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/roundercornersbutton"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:fontFamily="@font/montserrat"
                android:foregroundTint="#FFFFFF"
                android:shadowColor="#7C7979"
                android:text="Add Step"
                android:textColor="#FF9400"
                android:textSize="13sp"
                app:backgroundTint="#FFFFFF"
                app:layout_constraintEnd_toStartOf="@+id/guideline31"
                app:layout_constraintStart_toStartOf="@+id/guideline29"
                app:layout_constraintTop_toBottomOf="@+id/createrecipe3_ll_steps" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>